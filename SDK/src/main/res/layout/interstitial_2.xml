<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/interstitial_root"
    android:background="#c51618">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/clouds_corrected"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:id="@+id/optionsLayout"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:textColor="#fff"
            android:id="@+id/optionATV"
            android:paddingBottom="10dp"
            android:background="@drawable/round_rectangle_background"
            android:layout_marginBottom="10dp"
            android:text="YEEAAAAHHHHHHHHHHHH"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:textColor="#fff"
            android:id="@+id/optionBTV"
            android:paddingBottom="10dp"
            android:background="@drawable/round_rectangle_background"
            android:layout_marginBottom="10dp"
            android:text="YES."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:id="@+id/optionCTV"
            android:textColor="#fff"
            android:paddingBottom="10dp"
            android:background="@drawable/round_rectangle_background"
            android:layout_marginBottom="10dp"
            android:text="No."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:textColor="#fff"
            android:id="@+id/optionDTV"
            android:paddingBottom="10dp"
            android:background="@drawable/round_rectangle_background"
            android:layout_marginBottom="10dp"
            android:text="Nooooooooooooooooooo"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#fff"
        android:id="@+id/questionTV"
        android:paddingBottom="10dp"
        android:background="@drawable/round_rectangle_background"
        android:layout_marginBottom="30dp"
        android:layout_above="@id/optionsLayout"
        android:text="Are you loving it?\nAre you loving it?\nAre you loving it?\nAre you loving it?\nAre you loving it?\nAre you loving it?"/>



</RelativeLayout>